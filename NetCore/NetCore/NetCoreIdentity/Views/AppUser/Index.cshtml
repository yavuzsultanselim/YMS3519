@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="card">
        <div class="card-header">
            <h2>Kullanıcı Listesi</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Kullanıcı Adı</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <a asp-action="Details" asp-controller="AppUser" asp-route-id="@user.Id" class="btn btn-primary">Kullanıcı Detay</a><!--Butona tıklandığında ayrı bir sayfada kullanıcını detayları görüntülensin.-->
                                <a asp-action="Delete" asp-controller="AppUser" asp-route-id="@user.Id" class="btn btn-danger">Kullanıcı Sil</a><!--Butona tıklandığında ayrı bir sayfada "xxx isimli kullanıcıyı silmek istiyor musun?" uyarısını versin. Ok butonuna tıklandığında kullanıcıyı silsin..-->
                                <a  class="btn btn-success">Admin Yap</a><!--Butona tıklandığında o kullanıcının rolünü "Admin" olarak tanımlasın.-->
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
